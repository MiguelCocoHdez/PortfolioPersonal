---

interface enlaces {
    front?: string;
    back?: string;
    deploy?: string;

}

const { titulo, descripcion, tecnologias, img, enlaces } = Astro.props

---

<div class="contenido-tarjeta grid lg:grid-cols-2 lg:gap-0 group w-[90%] md:w-[60%] h-auto lg:h-[400px] rounded-lg shadow-sm border border-gray-200 transition-transform duration-300 hover:scale-105 hover:shadow-xl">
    <div class="contenido-derecha lg:order-1">
        <img src={img} alt="" class="w-full h-full object-cover" />
    </div>

    <div class="contenido-izquerda flex flex-col justify-center p-8 h-full">
        <div class="container-titulo">
            <h3 class="font-bold text-2xl">{titulo}</h3>
        </div>

        <div class="container-descripcion">
            <p class="mt-4 text-gray-600">{descripcion}</p>
        </div>

        <div class="container-tecnologias mt-4">
            <div class="tecnologia flex flex-wrap gap-4">
                {tecnologias.map((tecnologia: string) => (
                    <span class="text-xs p-2 border border-gray-200 rounded-2xl">{tecnologia}</span>
                ))}
            </div>
        </div>

        <div class="container-botones mt-10 flex gap-8 items-center">
            {enlaces?.front && (
                <a href={enlaces.front} target="_blank" class="bg-white px-4 py-2 rounded-xl border border-gray-300 hover:bg-blue-500 hover:text-white transition flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                    Código Front
                </a>
            )}
  
            {enlaces?.back && (
                <a href={enlaces.back} target="_blank" class="bg-white px-4 py-2 rounded-xl border border-gray-300 hover:bg-blue-500 hover:text-white transition flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                    Código Back
                </a>
            )}
  
            {enlaces?.deploy && (
                <a href={enlaces.deploy} target="_blank" class="bg-blue-500 text-white px-4 py-2 rounded-xl hover:bg-blue-600 transition flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link-icon lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
                    Ver Proyecto
                </a>
            )}
        </div>
    </div>

    
</div>